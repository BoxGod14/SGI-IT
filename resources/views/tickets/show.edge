<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible">
    <title>Ver ticket</title>
</head>
<body>
    <div id="ticket">
        <p id="subject">{{ ticket.subject }}</p>
        <p id="description">{{ ticket.description }}</p>
    </div>
    <div id="infoTicket">
        <p>Solicitante</p>
        <p>{{requester.profile.name}}</p>
        <form>         
            <select name="technician" id="technician">
                <option value=""></option>
                @each(technician_ in technicians)
                <option value="{{technician_.id}}"
                @if(technician && technician_.id == technician.id)
                  selected
                @end
                >{{technician_.profile.name}}</option>
                @endeach               
            </select>

            <p>Estado</p>
            <select name="role" id="role">
                @each(state in states)
                  <option value="{{state}}">{{state}}</option>
                @endeach               
            </select>
        </form>
    </div>
</body>
</html>